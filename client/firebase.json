{
    "hosting": [
      {
        "target": "web",
        "public": "web/build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        
        "headers": [
          {
            "source": "**/*",
            "headers": [
              {
                "key": "Cross-Origin-Opener-Policy",
                "value": "same-origin allow-popup"
              }
            ]
          }
        ]
      }
    ]
  }